<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCoach.View.MenuPage"
             Title="Coach Menu"
             BackgroundColor="{StaticResource PageBackgroundBrush}">

    <Grid RowDefinitions="Auto, *, Auto"
          Padding="20"
          RowSpacing="20">

        <Border Grid.Row="0"
                Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 0"
                Padding="15"
                BackgroundColor="Transparent">

            <Label Text="Bienvenue sur l'application Coach"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{StaticResource TextColorBrush}"
                   HorizontalTextAlignment="Center"/>
        </Border>

        <Image x:Name="imgFitness"
               Grid.Row="1"
               Source="{AppThemeBinding Light=fitness_light, Dark=fitness_dark}"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <VerticalStackLayout Grid.Row="2"
                             Spacing="15">

            <Button Text="Calcul IMG"
                    HeightRequest="55"
                    CornerRadius="8"
                    FontSize="18"
                    Clicked="BtnCalculIMG_Clicked"/>

            <Button Text="Mon historique"
                    HeightRequest="55"
                    CornerRadius="8"
                    FontSize="18"
                    Clicked="BtnHistorique_Clicked"/>

        </VerticalStackLayout>

    </Grid>
</ContentPage>